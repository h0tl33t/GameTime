<h1>Add Game</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@game) do |f| %>
			<div>
			<%= f.label :name %>
			<%= f.text_field :name %>
			<%= f.label :platform %>
			<%= f.text_field :platform %>
			<%= f.label :players_required %>
			<%= f.text_field :players_required %>
			</div>
			<%= f.submit "Create Game", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>