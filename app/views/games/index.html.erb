<h3>Games</h3>
<%= "No games found." if @games.empty? %>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Platform</th>
	  <th>Players Required</th>
	  <% if current_player.admin? %>
	  <th></th>
	  <th></th>
	  <th></th>
	  <% end %>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
    <tr>
      <td><%= game.name %></td>
      <td><%= game.platform %></td>
	  <td><%= game.players_required %></td>
	  <% if current_player.admin? %>
	    <td><%= link_to "Show", game, class: "btn btn-small" %></td>
        <td><%= link_to "Edit", edit_game_path(game), class: "btn btn-small" %></td>
        <td><%= link_to "Delete", game, method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: "btn btn-small" %></td>
	  <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Add Game", new_game_path, class: "btn" if current_player.admin? %>