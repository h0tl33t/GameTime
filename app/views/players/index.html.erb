<h3>Registered Players</h3>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Alias</th>
	  <% if current_player.admin? %>
		<th>Email</th>
	  <% end %>
	  <th></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
    <tr>
      <td><%= player.name %></td>
      <td><%= player.alias %></td>
	  <% if current_player.admin? %>
		<td><%= player.email %></td>
	  <% end %>
	  <td>
		<% if current_player.friends.include?(player) %>
			<%= link_to "Remove Friend", current_player.friendships.select{|friendship| friendship.friend = player}.first, method: :delete, data: {confirm: "Are you sure you want to remove this friend?"}, :title => "Remove Friend", class: "btn btn-small"%>
		<% elsif current_player == player %>
		<% else %>
			<%= link_to "Add Friend", friendships_path(:friend_id => player), method: :post, class: "btn btn-small"%>
		<% end %>
	  </td>
    </tr>
    <% end %>
  </tbody>
</table>