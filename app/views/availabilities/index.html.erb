<h1>Availabilities</h1>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Start At</th>
      <th>End At</th>
	  <th>Game(s)</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @availabilities.each do |availability| %>
    <tr>
	  <td onclick="location.href='<%= calendar_path %>'"><%= availability.start_at.in_time_zone.strftime("%l:%M%p (%m/%d/%y)") %></td>
	  <td onclick="location.href='<%= calendar_path %>'"><%= availability.end_at.in_time_zone.strftime("%l:%M%p (%m/%d/%y)") %></td>
	  <td><%= (availability.games.map {|game| game.name}).join(", ") %></td>
      <td><%= link_to "Show", player_availability_path(current_player, availability), class: "btn btn-small" %></td>
      <td><%= link_to "Edit", edit_player_availability_path(current_player, availability), class: "btn btn-small" %></td>
      <td><%= link_to "Delete", player_availability_path(current_player, availability), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-small" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Availability", new_player_availability_path, class: "btn" %>
