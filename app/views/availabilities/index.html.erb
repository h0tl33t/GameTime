<h1>Availabilities</h1>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Start At</th>
      <th>End At</th>
	  <th>Game(s)</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @availabilities.each do |availability| %>
    <tr>
	  <td onclick="location.href='<%= calendar_path %>'"><%= availability.start_at %></td>
	  <td onclick="location.href='<%= calendar_path %>'"><%= availability.end_at %></td>
	  <td><%= (availability.games.map {|game| game.name}).join(", ") %></td>
      <td><%= link_to "Show", availability %></td>
      <td><%= link_to "Edit", edit_availability_path(availability) %></td>
      <td><%= link_to "Delete", availability, method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
