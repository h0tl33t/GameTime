<h3>Availability</h3>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Start At</th>
      <th>End At</th>
	  <th>Games</th>
	  <th>Created By</th>
	  <th></th>
	  <th></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @availability.start_at %></td>
      <td><%= @availability.end_at %></td>
	  <td><%= (@availability.games.map {|game| game.name}).join(",") %>
	  <td><%= "#{@availability.player.name} (#{@availability.player.alias})" %></td>
      <td><%= link_to "Edit", edit_availability_path(@availability) %></td>
	  <td><%= link_to "Delete", @availability, :method => :delete, data: {confirm: "Are you sure you want to delete?"}%></td>
    </tr>
  </tbody>
</table>

<%= link_to "Back", calendar_path, class: "btn"%>
</div>